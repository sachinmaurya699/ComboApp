<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:id="@+id/text_chat_message"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:paddingStart="12.00dp"
        android:paddingTop="8.00dp"
        android:paddingEnd="12.00dp"
        app:layout_constraintWidth_max="@dimen/_8sdp"
        android:textSize="13.00sp"
        android:padding="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/item_container_send_message"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.00dp"
        android:id="@+id/date_time"
        android:textColor="#B3AFAF"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_chat_message"
        />




</androidx.constraintlayout.widget.ConstraintLayout>