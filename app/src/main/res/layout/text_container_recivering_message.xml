<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4.000dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/my_pro_img"
        android:layout_width="25.00dp"
        android:layout_height="25.00dp"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="@+id/text_message1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_message1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#000"
        android:padding="12.00dp"
        android:layout_marginStart="4.00dp"
        android:layout_marginLeft="4.00dp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintWidth_max="wrap"
        android:textSize="13.00sp"
        app:layout_constraintWidth_percent="0.75"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_pro_img"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.00dp"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/text_message1"
        app:layout_constraintStart_toStartOf="@+id/text_message1"
        android:textColor="#B8B0B0"
        />




</androidx.constraintlayout.widget.ConstraintLayout>