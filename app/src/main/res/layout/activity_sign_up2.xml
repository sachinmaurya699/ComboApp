<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Activity.SignUpActivity"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/my_viewid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colour_hd_blue"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:id="@+id/text_signup"
        android:padding="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/wave"
        android:id="@+id/my_wave"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_viewid"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgdesignlogin"
        android:padding="15dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_person"
        android:inputType="textPersonName"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/mynameid"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="Enter the Name"
        app:layout_constraintTop_toBottomOf="@+id/my_wave"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgdesignlogin"
        android:padding="15dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_mail"
        android:inputType="textEmailAddress"
        android:id="@+id/edittext_emailid"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="Enter the Email"
        app:layout_constraintTop_toBottomOf="@+id/mynameid"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgdesignlogin"
        android:padding="15dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="Enter the Password"
        android:id="@+id/my_passwprdid"
        app:layout_constraintTop_toBottomOf="@+id/edittext_emailid"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgdesignlogin"
        android:padding="15dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:hint="Enter the Password"
        android:id="@+id/my_passwprdid_conform"
        app:layout_constraintTop_toBottomOf="@+id/my_passwprdid"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/my_signup_registr"
        android:background="@drawable/bgdesignlogin"
        android:layout_marginTop="@dimen/_15ssp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@+id/my_passwprdid_conform"
        />

</androidx.constraintlayout.widget.ConstraintLayout>