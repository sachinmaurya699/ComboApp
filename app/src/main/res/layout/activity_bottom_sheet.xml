<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Bottom_Sheet_Activity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10ssp"
        android:padding="@dimen/_12ssp"
        android:text="Product Next"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/next_product9"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_bg"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/_10ssp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:hint="Enter the country code"
        android:id="@+id/my_country_code"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_product9"
        />
